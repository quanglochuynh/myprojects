int spacingX = 60,
    spacingY = 20;

void setup(){
    size(800,600);
    background(0);
    frameRate(30);
    fill(255);
    //minor grid
    strokeWeight(1);
    stroke(50);
    for (int i=0; i<=width; i+=spacingX){
        line(i,height,i,0);
    }
    for (int j=0; j<=height; j+=spacingY){
        line(0, j,width,j);
    }
    //major grid
    strokeWeight(2);
    stroke(255);
    line(0,height/2,width,height/2);
    line(width/2,0,width/2,height);
    
}

